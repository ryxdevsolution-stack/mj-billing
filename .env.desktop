# Desktop Application Configuration
# Copy this file to .env and adjust values as needed

# Environment
NODE_ENV=production

# Backend Service
BACKEND_PORT=5000
BACKEND_HOST=localhost

# Frontend Service
FRONTEND_PORT=3001
FRONTEND_HOST=localhost

# Service Management
SERVICE_MAX_RETRIES=30
SERVICE_RETRY_DELAY=1000
SERVICE_TIMEOUT=5000
SERVICE_RESTART_ATTEMPTS=3

# Window Settings
WINDOW_WIDTH=1400
WINDOW_HEIGHT=900
WINDOW_MIN_WIDTH=1024
WINDOW_MIN_HEIGHT=600
WINDOW_START_MAXIMIZED=false
SHOW_DEV_TOOLS=false

# Database
USE_LOCAL_DB=false
LOCAL_DB_PATH=./data/local.db
DB_SYNC_INTERVAL=30000
OFFLINE_MODE=false

# Printing
PRINTER_ENABLED=true
# Leave empty to use system default printer
PRINTER_NAME=
PRINTER_TYPE=thermal
SILENT_PRINT=false

# Auto Update
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=3600000
UPDATE_CHANNEL=stable

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5