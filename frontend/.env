NEXT_PUBLIC_API_URL=https://mj-billing.onrender.com/api
# NEXT_PUBLIC_API_URL=http://localhost:5000/api

# Deployment mode: local | cloud | hybrid
# local: On-premise deployment with direct printer access
# cloud: SaaS deployment, uses browser/QZ Tray for printing
# hybrid: Can work both ways
NEXT_PUBLIC_DEPLOYMENT_MODE=local

# Default print method: browser | direct_api | qz_tray
# browser: Uses window.print() dialog
# direct_api: Direct to server printer (local only)
# qz_tray: Via QZ Tray agent (requires installation)
NEXT_PUBLIC_DEFAULT_PRINT_METHOD=direct_api
