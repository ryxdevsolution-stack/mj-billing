{
  "name": "ryx-billing",
  "version": "1.0.0",
  "description": "Professional Billing and Inventory Management System",
  "main": "desktop/main/index.js",
  "author": {
    "name": "RYX Solutions",
    "email": "support@ryx-solutions.com"
  },
  "homepage": "https://ryx-billing.com",
  "license": "Proprietary",
  "scripts": {
    "start": "cross-env ELECTRON_RUN_AS_NODE= electron .",
    "dev": "cross-env NODE_ENV=development ELECTRON_RUN_AS_NODE= electron .",
    "dev:backend": "cd backend && python app.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "echo Backend packages will be installed on first app run",
    "build": "npm run build:frontend",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "clean": "rm -rf dist build out",
    "bundle:python:win": "powershell -ExecutionPolicy Bypass -File scripts/bundle-python-windows.ps1",
    "dist:win:full": "npm run bundle:python:win && npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.ryx.billing",
    "productName": "RYX Billing",
    "artifactName": "${name}-${version}-${arch}.${ext}",
    "copyright": "Copyright Â© 2024 RYX Solutions",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "asar": true,
    "asarUnpack": [
      "backend/**/*",
      "frontend/**/*"
    ],
    "files": [
      "desktop/**/*",
      "backend/**/*",
      "frontend/.next/**/*",
      "frontend/public/**/*",
      "frontend/package.json",
      "frontend/next.config.js",
      "frontend/node_modules/**/*",
      "!backend/venv/**/*",
      "!backend/__pycache__/**/*",
      "!backend/**/*.pyc",
      "!frontend/.next/cache/**/*",
      "!**/.git/**/*",
      "!**/.env.local",
      "!**/dist/**/*",
      "!**/build/**/*"
    ],
    "extraFiles": [
      {
        "from": "frontend/.next/standalone/node_modules",
        "to": "resources/app.asar.unpacked/frontend/.next/standalone/node_modules",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraResources": [
      {
        "from": "desktop/resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "desktop/resources/icon.png",
      "category": "Office",
      "description": "Professional Billing and Inventory Management System"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "desktop/resources/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "desktop/resources/icon.icns",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RYX Billing"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "mj-billing",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "jimp": "^1.6.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "to-ico": "^1.1.5"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-updater": "^6.6.2"
  }
}
