{
  "name": "ryx-billing",
  "version": "1.0.0",
  "description": "Professional Billing and Inventory Management System",
  "main": "desktop/main/index.js",
  "author": {
    "name": "RYX Solutions",
    "email": "support@ryx-solutions.com"
  },
  "homepage": "https://ryx-billing.com",
  "license": "Proprietary",
  "scripts": {
    "start": "electron .",
    "dev": "cross-env NODE_ENV=development electron .",
    "dev:backend": "cd backend && python app.py",
    "dev:frontend": "cd frontend && npm run dev",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && pip install -r requirements.txt",
    "build": "npm run build:frontend && npm run build:backend",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "clean": "rm -rf dist build out"
  },
  "build": {
    "appId": "com.ryx.billing",
    "productName": "RYX Billing",
    "copyright": "Copyright Â© 2024 RYX Solutions",
    "directories": {
      "output": "dist"
    },
    "compression": "maximum",
    "asar": true,
    "files": [
      "desktop/**/*",
      "backend/**/*",
      "frontend/.next/**/*",
      "frontend/public/**/*",
      "frontend/package.json",
      "!backend/venv/**/*",
      "!backend/__pycache__/**/*",
      "!backend/**/*.pyc",
      "!frontend/.next/cache/**/*",
      "!frontend/node_modules/**/*",
      "!**/.git/**/*",
      "!**/.env",
      "!**/dist/**/*",
      "!**/build/**/*"
    ],
    "extraResources": [
      {
        "from": "desktop/resources",
        "to": "resources",
        "filter": [
          "**/*"
        ]
      }
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "desktop/resources/icon.png",
      "category": "Office",
      "description": "Professional Billing and Inventory Management System"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "desktop/resources/icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "desktop/resources/icon.png",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "RYX Billing"
    },
    "publish": {
      "provider": "github",
      "owner": "your-github-username",
      "repo": "mj-billing",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "dotenv": "^16.6.1",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "electron-updater": "^6.6.2"
  }
}
