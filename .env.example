# ============================================================================
# RYX Billing - Environment Variables Template
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to git!
# ============================================================================

# ==========================================
# ENVIRONMENT
# ==========================================
# Options: development, production, testing
NODE_ENV=development
ENVIRONMENT=development

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
# PostgreSQL connection string from Supabase or Render
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@db.xxxxx.supabase.co:5432/postgres

# Legacy alias (for backward compatibility)
DB_URL=postgresql://postgres:your-password@db.xxxxx.supabase.co:5432/postgres

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Get these from your Supabase project settings
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ==========================================
# SECURITY (JWT & Flask) - CRITICAL!
# ==========================================
# Generate secure random strings for production
# Use: python -c "import secrets; print(secrets.token_hex(32))"
# WARNING: The application will fail to start in production if these are default values
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SECRET_KEY=your-super-secret-flask-key-change-this-in-production

# Token expiration (in hours)
JWT_EXPIRY_HOURS=24

# ==========================================
# CORS CONFIGURATION
# ==========================================
# Frontend URLs that are allowed to access the API
# Comma-separated list of allowed origins
# IMPORTANT: Include ALL origins that need API access (local + production)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://mj-billing.vercel.app

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=RYX Billing
APP_VERSION=1.0.0

# Backend port
PORT=5000

# Set to False in production
DEBUG=False

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==========================================
# SERVICE PORTS
# ==========================================
BACKEND_PORT=5000
FRONTEND_PORT=3000

# ==========================================
# FRONTEND ENVIRONMENT (.env.local in frontend/)
# ==========================================
# Create frontend/.env.local with:
# NEXT_PUBLIC_API_URL=http://localhost:5000
#
# For production, create frontend/.env.production with:
# NEXT_PUBLIC_API_URL=https://your-backend.onrender.com
