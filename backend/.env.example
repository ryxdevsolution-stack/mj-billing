# ============================================================================
# RYX Billing - Backend Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your values
# NEVER commit the actual .env file to version control
# ============================================================================

# ===========================================
# ENVIRONMENT
# ===========================================
# Options: development, production, testing
FLASK_ENV=development
ENVIRONMENT=development

# ===========================================
# SECURITY (CRITICAL - Change in production!)
# ===========================================
# Generate strong secrets using: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET=change-this-in-production-use-strong-random-value
SECRET_KEY=change-this-in-production-use-another-strong-value

# Token expiration in hours
JWT_EXPIRY_HOURS=24

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# For PostgreSQL (Supabase or self-hosted)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# For local SQLite (development only)
# DATABASE_URL=sqlite:///ryx_billing.db

# ===========================================
# SUPABASE CONFIGURATION (Optional)
# ===========================================
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
# Use * for development only, be specific in production
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ===========================================
# LOGGING
# ===========================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ===========================================
# APPLICATION
# ===========================================
APP_NAME=RYX Billing
APP_VERSION=1.0.0

# Server port (optional, defaults to 5000)
PORT=5000

# Enable debug mode (set to False in production)
DEBUG=True
